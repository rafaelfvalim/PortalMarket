<%= render 'layouts/messages' %>
<div class="row wrapper page-heading">
  <div class="col-lg-10">
    <h2>Lista de Scripts e Valores</h2>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-bordered table-condensed">
      <thead>
      <tr>
        <th>Id</th>
        <th><%= t 'labels.script_attributes.name' %></th>
        <th><%= t 'labels.script_attributes.status' %></th>
        <th><%= t 'labels.script_attributes.value' %></th>
        <th><%= t 'labels.script_attributes.currency' %></th>
        <th><%= t 'labels.script_price.currency_date' %></th>
        <th><%= t 'labels.buttons.actions' %></th>
      </tr>
      </thead>
      <tbody>
      <% @prices.each do |price| %>
          <tr>
            <td><%= link_to price.script_id, price.script %></td>
            <td><%= price.script.name %></td>
            <td><%= price.script.status.description.humanize %></td>
            <td><%= number_to_currency(price.value) %></td>
            <td><%= Currency.find(price.currency_id).description %></td>
            <td><%= price.currency_data %></td>
            <td><%= link_to "#{t 'labels.buttons.edit'}", edit_price_path(price), class: 'btn btn-primary' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @scripts %>

    <br>
  </div>
</div>