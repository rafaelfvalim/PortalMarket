<%= form_for(@price) do |f| %>
    <% if @price.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@price.errors.count, "error") %> prohibited this price from being saved:</h2>

          <ul>
            <% @price.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-md-6">
        <%= f.label :script_id %>
        <%= f.number_field :script_id, class: 'form-control' , readonly: :true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.label :value %><br>
        <%= f.text_field :value, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.label :currency_id %><br>
        <%= f.collection_select :currency_id, Currency.all, :id, :description, {prompt: "Select ..."}, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.label :currency_data %><br>
        <%= f.date_select :currency_data, class: 'form-control' %>
      </div>
    </div>
    <br>
    <div class="actions">
      <%= f.button :back,  class: 'btn btn-default' %>
      <%= f.submit  class: 'btn btn-success' %>
    </div>
<% end %>
