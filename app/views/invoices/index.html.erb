<%= render 'layouts/messages' %>
<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
    <div class="col-md-12">
      <%= link_to :back, class: 'btn btn-primary next' do %>
          <i class="fa fa-chevron-left"> <%= t 'labels.buttons.back' %> </i>
      <% end %>
    </div>
  </div>
  <br>

  <h3><%= t 'labels.invoices.page_header' %> </h3>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default center">
        <div class="panel-body">
          <table class="table table-striped table-condensed responsive" id="invoice-table" data-source="<%= invoices_ajax_invoices_path(format: :json) %>">
            <thead>
            <tr>
              <th><%= t 'labels.user_attribures.buyer' %></th>
              <th><%= t 'labels.script_attributes.script_id' %></th>
              <th><%= t 'labels.script_attributes.script_name' %></th>
              <th><%= t 'labels.script_attributes.platform'%></th>
              <th><%= t 'labels.script_attributes.system'%></th>
              <th><%= t 'labels.script_attributes.s_n'%></th>
              <th><%= t 'labels.script_attributes.value'%></th>
              <th><%= t 'labels.script_attributes.sent_to'%></th>
              <th><%= t 'labels.script_attributes.value'%></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
