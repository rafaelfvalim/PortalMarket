<%= render 'layouts/messages' %>
<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
    <div class="col-md-12">
      <%= link_to :back, class: 'btn btn-primary next' do %>
          <i class="fa fa-chevron-left"> Back</i>
      <% end %>
    </div>
  </div>
  <br>

  <h3>Invoices </h3>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default center">
        <div class="panel-body">
          <table class="table table-striped table-condensed responsive" id="invoice-table" data-source="<%= invoices_ajax_invoices_path(format: :json) %>">
            <thead>
            <tr>
              <th>Id</th>
              <th>Comprador</th>
              <th>Script Id</th>
              <th>Script Name</th>
              <th>Platform</th>
              <th>Sistema</th>
              <th>S/N</th>
              <th>Valor</th>
              <th>Enviado p/</th>
              <th>Criação</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
