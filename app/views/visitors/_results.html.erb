<div class="row ">
  <div class="col-lg-12 col-md-12 col-xs-12 text-center digg_pagination">
    <%= js_will_paginate scripts %>
  </div>
</div>
<div class="panel panel-default landing-page-box-results">
  <div class="panel-body">
    <div class="row ">
      <div class="col-lg-12 col-md-12 col-xs-12">
        <% if scripts.present? %>
            <div class="row">
              <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="row">
                  <% scripts.each do |s| %>
                      <div class="col-lg-3 col-md-3 col-xs-3">
                        <div class="contact-box center-version">
                          <a href="#" class="link-disable" id="">
                            <img alt="image" class="img-circle" src="<%= image_path(s.script_category.nil? ? 'dummy_category.png' : s.script_category.image_category_url) %>">
                            <h3 class="m-b-xs truncate"><strong><%= s.name %></strong></h3>
                            <div class="font-bold"><%= s.platform %></div>
                            <div class="m-t-md searchDescription">
                              <%= s.status_id == Status::PRE_LANCAMENTO_APROVADO ? ' <div class="font-bold" style="color:red"> <i class="fa fa-v fa-star">PRÉ LANÇAMENTO</i></div>'.html_safe : ' ' %>
                              <%= s.description %>
                            </div>
                          </a>
                          <!--<div class="contact-box-footer">-->
                          <!---->
                          <!--</div>-->
                        </div>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
        <% else %>
            <div class="row">
              <div class="col-lg-12 col-md-12 col-xs-12 text-center">
                <br>
                <h3><b>Não temos nada com o termo " <%= params[:query] %> "</b></h3>
                <h3><b> Você gostaria de sugerir algum script?</b></h3>
                <div class="landing-contatc-form ">
                  <div class="col-lg-6 col-md-6 col-xs-6 ">
                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                      Enviar Sugestão
                    </button>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row ">
  <div class="col-lg-12 col-md-12 col-xs-12 text-center digg_pagination">
    <%= js_will_paginate scripts %>
  </div>
</div>
