<div class="passwordBox animated fadeInDown">
  <div class="row">

    <div class="col-md-12">
      <div class="ibox-content">
        <h2 class="font-bold">Alteração de Senha</h2>
        <div class="row">
          <div class="col-lg-12">
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, :class => 'm-t'}) do |f| %>
                <h3>Favor informe a nova senha</h3>
                <%= devise_error_messages! %>
                <%= f.hidden_field :reset_password_token %>
                <div class="form-group">
                  <%= f.label :password, "#{t 'labels.devise.new_password'}" %>
                  <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
                  <%= f.label :password_confirmation, "#{t 'labels.devise.confirm_password'}" %>
                  <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
                </div>
                <%= f.submit "#{t 'labels.devise.change_passwrod'}", :class => 'btn btn-primary block full-width m-b' %>
                <%= link_to 'Sign in', '/users/sign_in', :class => 'btn btn-success block full-width m-b' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      Copyright Klustter Script Inovation
    </div>
    <div class="col-md-6 text-right">
      <small>© 2015-2016</small>
    </div>
  </div>
</div>