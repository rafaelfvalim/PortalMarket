<div class="passwordBox animated fadeInDown">
  <div class="row">

    <div class="col-md-12">
      <div class="ibox-content">

        <h2 class="font-bold">Esqueceu a Senha</h2>

        <p>
          <%= raw t 'labels.devise.forgot_password' %>
        </p>

        <div class="row">

          <div class="col-lg-12">
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :role => 'form', :class => 'm-t'}) do |f| %>
                <%= devise_error_messages! %>
                <% if alert.present? %>
                    <div class="alert alert-danger">
                      <%= alert %>
                    </div>
                <% end %>
                <%= devise_error_messages! %>
                <%= f.label 'Email:' %>
                <%= f.email_field :email, :autofocus => true, class: 'form-control', :placeholder => 'Email ....' %>
                <br>
                <%= f.submit "#{t 'labels.devise.reset_password'}", :class => 'btn btn-primary block full-width m-b' %>
            <% end %>
            <%= link_to 'Sign in', '/users/sign_in', :class => 'btn btn-success block full-width m-b' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      Copyright Klustter Company
    </div>
    <div class="col-md-6 text-right">
      <small>Â© 2015-2016</small>
    </div>
  </div>
</div>