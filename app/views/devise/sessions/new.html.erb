<div class="loginColumns animated fadeInDown">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form', :class => 'm-t'}) do |f| %>
      <div class="row">
        <div class="col-md-12">
          <% if alert.present? %>
              <div class="alert alert-danger">
                <%= alert %>
              </div>
          <% end %>
          <% if notice.present? %>
              <div class="alert alert-success">
                <%= notice %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= raw t 'labels.devise.login_wellcome' %>
        </div>
        <div class="col-md-6">
          <div class="ibox-content">

            <div class="form-group">
              <%= f.email_field :email, :autofocus => true, class: 'form-control', :placeholder => 'Email ' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', :placeholder => "#{t 'labels.devise.password'}" %>
            </div>
            <%= f.submit 'Entrar', :class => 'btn btn-primary block full-width m-b' %>
            <% if devise_mapping.rememberable? -%>
                <div class="checkbox" style="width:150px">
                  <label>
                    <%= f.check_box :remember_me %> <%= t 'labels.devise.remember_me' %>
                  </label>
                </div>
            <% end -%>
            <p class="text-muted text-center">
              <%= raw t 'labels.devise.do_not_have_an_account' %>
            </p>
            <%- if devise_mapping.registerable? %>
                <%= link_to "#{t 'labels.devise.create_account'}", new_registration_path(resource_name), class: 'btn btn-sm btn-info btn-block' %>
            <% end -%>
            <br>
            <%- if devise_mapping.recoverable? %>
                <small>
                  <%= link_to "#{t 'labels.devise.forgot_password_login'}", new_password_path(resource_name), class: 'center' %>
                </small>
                <br>
                <small>
                  <%= link_to "#{t 'labels.devise.resend_confiramtion_login'}", '/users/confirmation/new', class: 'center' %>
                </small>
            <% end -%>
          </div>
        </div>
      </div>
      <hr/>
      <div class="row">
        <div class="col-md-6">
          Copyright Klustter Script Inovation
        </div>
        <div class="col-md-6 text-right">
          <small>Â© 2015-2016</small>
        </div>
      </div>
  <% end %>
</div>
