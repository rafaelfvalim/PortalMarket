<div class="loginColumns animated fadeInDown">
  <div class="row">

    <div class="col-md-6">
        <%= raw t 'labels.devise.login_wellcome'%>
    </div>
    <div class="col-md-6">
      <div class="ibox-content">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form', :class => 'm-t'}) do |f| %>
            <% if alert.present? %>
                <div class="alert alert-danger">
                  <%= alert %>
                </div>
            <% end %>
            <div class="form-group">
              <%= f.email_field :email, :autofocus => true, class: 'form-control', :placeholder => 'Email ' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', :placeholder => "#{t 'labels.devise.password'}" %>

            </div>
            <%= f.submit 'Sign in', :class => 'btn btn-primary block full-width m-b' %>
            <% if devise_mapping.rememberable? -%>
                <div class="checkbox" style="width:150px">
                  <label>
                    <%= f.check_box :remember_me %> <%= t 'labels.devise.remember_me' %>
                  </label>
                </div>
            <% end -%>
            <%- if devise_mapping.recoverable? %>
                <small>
                  <%= link_to "#{t'labels.devise.forgot_password_login'}", new_password_path(resource_name), class: 'right' %>
                </small>
                <br>
                <small>
                  <%= link_to "#{t'labels.devise.resend_confiramtion_login'}", '/users/confirmation/new', class: 'right' %>
                </small>
            <% end -%>

            <p class="text-muted text-center">
              <%= raw t 'labels.devise.do_not_have_an_account'%>
            </p>
            <%- if devise_mapping.registerable? %>
                <%= link_to "#{t'labels.devise.create_account'}", new_registration_path(resource_name), class: 'btn btn-sm btn-white btn-block' %>
            <% end -%>

        <% end %>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      Copyright Klustter Script Inovation
    </div>
    <div class="col-md-6 text-right">
      <small>Â© 2015-2016</small>
    </div>
  </div>

</div>
