<%= render 'layouts/messages' %>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="row">
    <div class="col-md-12">
      <h1><%= t 'labels.user_attribures.user' %> </h1>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <div class="pull-left">

        <%= link_to master_user_users_path, class: 'btn btn-primary' do %>
            <%= t 'labels.nav_bar.my_team' %>
        <% end %>

        <%= link_to edit_master_user_users_path(id:@user.id), class: 'btn btn-primary' do %>
            <%= t 'labels.buttons.edit' %>
        <% end %>
      </div>
      <div class="pull-right">
        <% if @user.is_my_master(current_user) %>
            <%= link_to "#{t 'labels.email.resent_confirmation'}", resend_confirmation_email_users_path(id: @user.id), class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
  <br>

  <div class="row">

    <div class="col-md-6">
      <p>
      <h4><strong>Email: </strong> <%= @user.email if @user.email %></h4>
      </p>
      <hr>
      <p>
      <h4><strong><%= t 'labels.member_attributes.member_type' %>: </strong> <%= @user.member.member_type.description %>
      </h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.member_attributes.member_name' %>: </strong> <%= @user.full_name %></h4></p>
      <hr>

      <p><h4><strong><%= t 'labels.member_attributes.bank' %>
      : </strong> <%= @user.member.bank.nil? ? '' : @user.member.bank.description %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.member_attributes.bank_ag' %>
      : </strong> <%= @user.member.bank.nil? ? '' : @user.member.bank_ag %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.member_attributes.bank_cc' %>
      : </strong> <%= @user.member.bank.nil? ? '' : @user.member.bank_cc %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.member_attributes.bank_cc_dg' %>
      : </strong> <%= @user.member.bank.nil? ? '' : @user.member.bank_cc_digit %></h4></p>
      <hr>

      <p><h4><strong><%= t 'labels.member_attributes.cpf' %>: </strong> <%= @user.member.cpf %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.member_attributes.cnpj' %>: </strong> <%= @user.member.cnpj %></h4></p>
      <hr>
      <p>
      <h4><strong><%= t 'labels.member_attributes.company_name' %>: </strong> <%= @user.member.company_name %></h4></p>
      <hr>
      <p><h4><strong>Created at: </strong> <%= @user.created_at %></h4></p>
      <hr>
      <p><h4><strong>Updated at: </strong> <%= @user.updated_at %></h4></p>
      <hr>
    </div>
    <div class="col-md-6">
      <p>
      <h4>
        <strong><%= t 'labels.member_attributes.cpf' %>? : </strong> <%= @user.confirmed_at.present? ? 'yes' : 'no' %>
      </h4></p>
      <hr>
      <h4>
        <strong><%= t 'labels.user_attribures.confirmed' %> At : </strong> <%= @user.confirmed_at %>
      </h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.user_attribures.current_sign' %>: </strong> <%= @user.current_sign_in_at %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.user_attribures.last_sign' %>: </strong> <%= @user.last_sign_in_at %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.user_attribures.last_sign' %>: </strong> <%= @user.last_sign_in_ip %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.user_attribures.last_sign_ip' %>: </strong> <%= @user.last_sign_in_ip %></h4></p>
      <hr>
      <p><h4><strong><%= t 'labels.user_attribures.confirmation_token' %>: </strong> <%= @user.confirmation_token %>
    </h4></p>
      <hr>
      <% if @user.address.present? %>
          <p><h4><strong><%= t 'labels.address_attribures.zip_code' %>: </strong> <%= @user.address.zip_code %></h4></p>
          <hr>
          <p><h4><strong><%= t 'labels.address_attribures.patio' %>: </strong> <%= @user.address.patio %></h4></p>
          <hr>
          <p><h4><strong><%= t 'labels.address_attribures.neighbordhood' %>: </strong> <%= @user.address.neighborhood %>
    </h4></p>
          <hr>
          <p><h4><strong><%= t 'labels.address_attribures.city' %>: </strong> <%= @user.address.city %></h4></p>
          <hr>
          <p><h4><strong><%= t 'labels.address_attribures.state' %>: </strong> <%= @user.address.state %></h4></p>
          <hr>
      <% end %>
    </div>
  </div>
</div>