<div id="wrapper">
  <%= render 'layouts/side_bar_contributor' %>
  <div id="page-wrapper">
    <%= render 'layouts/messages' %>
    <div class="row">
      <div class="col-md-12 text-center">
        <label><h2>Search</h2></label>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <%= form_tag searches_path, method: :get do %>
            <div class="row" id="row_process">
              <div class="col-md-3 text-center" id = "0">
                <div class="form-group">
                  <%= select_tag "process_modules", options_from_collection_for_select(@process_modules, "id", "description"), class: 'form-control', :data => { :level => "0" } , :onchange => 'searchProcess(this)', prompt: "Select ..." %>
                </div>
              </div>
            </div>
            <hr>
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
                <i class="fa fa-search"></i> Find Script
            <% end %>
            <!--<div class="input-group">-->
            <!--<%= text_field_tag :query, params[:query], class: 'form-control', placeholder: "Search for..." %>-->
            <!--<span class="input-group-btn">-->
            <!--<%= button_tag(type: "submit", class: "btn btn-default") do %>-->
                <!--<i class="fa fa-search"></i>-->
                <!--
            <% end %>-->
            <!--</span>-->
            <!--</div>-->
        <% end %>
      </div>
    </div>
    <br>
    <% if @scripts.present? %>
        <div class="row">
          <div class="col-md-12">
            <p>
              <small>
                <%= @scripts.total_count %> results |
                <%= @scripts.current_page %> pages |
                Per Page: <%= @scripts.per_page %>  |
                Total Pages: <%= @scripts.total_pages %>
              </small>
            </p>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="col-md-12">
            <% @scripts.each do |script| %>
                <div class="media">
                  <div class="media-left media-middle">
                    <i class="fa fa-file-code-o fa-3x"></i>
                  </div>
                  <div class="media-body">
                    <h4 class="media-heading">
                      <%= link_to show_product_buys_path(id: script) do %>
                          <%= script.name %>
                      <% end %>
                    </h4>

                    <p>Description: <%= script.description %></p>

                    <p>Cod: <%= script.id %></p>

                    <p> Contributor(s):
                      <% script.members.each do |member| %>
                          <% if script.members.size > 1 %>
                              <%= "#{member.member_name} #{ member.member_last_name}" %>  ,
                          <% else %>
                              <%= "#{member.member_name} #{ member.member_last_name}" %>
                          <% end %>
                      <% end %> - created at : <%= script.created_at %>
                    </p>

                    <p>Platform: <%= script.platform %></p>

                    <p>Tags: <%= "#{script.industry} #{script.complexity}" %></p>
                  </div>
                </div>
                <hr>
            <% end %>
          </div>
          <div class="row">
            <div class="col-md-12 text-center">
              <p><%= paginate @scripts %></p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>