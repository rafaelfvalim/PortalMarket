<div id="wrapper">
  <%= render 'layouts/side_bar_contributor' %>
  <div id="page-wrapper">
    <%= render 'layouts/messages' %>
    <div class="row">
      <div class="col-md-12 text-center">
        <label><h2>Search Solutions</h2></label>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <%= form_tag searches_path, method: :get do %>
            <div class="input-group">
              <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: "Search for..." %>
              <span class="input-group-btn">
                <%= button_tag(type: "submit", class: "btn btn-default") do %>
                  <i class="fa fa-search"></i>
                <% end %>
              </span>
            </div>
        <% end %>
      </div>
    </div>
    <br>
    <% if @scripts.present? %>
        <div class="row">
          <div class="col-md-12">
            <p><%= @scripts.total_count %> Results</p>
            <p><%= @scripts["took"] %> Results</p>

            <p>Pages: <%= @scripts.current_page %> </p>

            <p>Per Page: <%= @scripts.per_page %> </p>

            <p>Total Pages: <%= @scripts.total_pages %> </p>

          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <% @scripts.each do |script| %>
                <ul>
                  <li><%= script.id %></li>
                  <li><%= script.description %></li>
                </ul>
            <% end %>
          </div>
          <div class="row">
            <div class="col-md-12 text-center">
              <p><%= paginate @scripts %></p>
            </div>
          </div>
        </div>
    <% end %>
