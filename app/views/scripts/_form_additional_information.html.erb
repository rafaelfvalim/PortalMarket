<%= bootstrap_form_for(@script) do |f| %>
    <div class="row">
      <div class="col-lg-12">
        <% if @sub_action == 'create' %>
            <div class="pull-left">
              <%= f.button :submit, class: 'btn btn-default', name: "sub_action", value: "back" do %>
                  <i class="fa fa-chevron-left"></i> Back
              <% end %>
              <%= link_to 'Cancel', roll_back_script_scripts_path(:id => @script.id), :class => 'btn btn-default', data: {confirm: 'Are you sure?'} %>
            </div>
            <div class="pull-right">
              <%= f.button :submit, class: 'btn btn-default', name: "sub_action", value: "#{@sub_action}" do %>
                  <i class="fa fa-chevron-right"></i> Next
              <% end %>
            </div>
        <% else %>
            <%= link_to contributor_members_path, :class => 'btn btn-default', data: {confirm: 'Are you sure?'} do %>
                <i class="fa fa-chevron-left"></i> Scripts
            <% end %>
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
                <i class="fa fa-floppy-o"></i> Save
            <% end %>
            <%= link_to 'Edit Script', edit_script_path(:id => @script.id), :class => 'btn btn-default' %>
            <%= link_to 'Edit Value Chain', edit_build_value_chains_path(:id => @script.id), :class => 'btn btn-default' %>
        <% end %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-7">
        <% if @script.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@script.errors.count, "error") %> prohibited this script from being saved:</h2>
              <ul>
                <% @script.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= f.text_area :definition %>
        <%= f.text_area :long_text %>
        <label>Requirements</label>

        <div class="row">
          <div id="requirements" class="col-lg-10">
            <%= text_field_tag :query, params[:query], id: 'requeriment', class: 'form-control autocomplete', placeholder: 'Requirement.....' %>
          </div>
          <div class="col-lg-1">
            <%= link_to_add "Add", "add_requeriment" %>
          </div>
          <%= hidden_field_tag 'script_id', @script.id %>
          <%= hidden_field_tag 'script_id_requirement' %>
        </div>
        <div class="row">
          <div id="requeriments_list" class="col-lg-10">
            <table class="table table-bordered table-striped" id="requeriments_table">
              <thead>
              <th class="col-sm-4" colspan="2">Requirement</th>
              </thead>
              <tbody>
              <%= render partial: 'scripts/requirements_list', locals: {f: f} %>
              </tbody>
            </table>
          </div>
        </div>
        <div>
          <div class="row">
            <div id="related_scripts" class="col-lg-10">
              <%= text_field_tag :query, params[:query], id: 'related_script', class: 'form-control autocomplete', placeholder: 'Related Scrips.....' %>
            </div>
            <div class="col-lg-1">
              <%= link_to_add "Add", "add_related_script" %>
            </div>
            <%= hidden_field_tag 'script_id', @script.id %>
            <%= hidden_field_tag 'related_script_id' %>
          </div>
        </div>
        <div class="row">
          <div id="related_script_list" class="col-lg-10">
            <table class="table table-bordered table-striped" id="related_script_table">
              <thead>
              <th class="col-sm-4" colspan="2">Related Scripts</th>
              </thead>
              <tbody>
              <%= render 'scripts/related_list_list' %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-5">
        <fieldset class="scheduler-border">
          <legend class="scheduler-border">Information :</legend>
          <p>Aqui as algumas informações</p>
        </fieldset>
      </div>
    </div>
<% end %>