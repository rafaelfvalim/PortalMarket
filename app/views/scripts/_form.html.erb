<%= bootstrap_form_for (@script) do |f| %>
    <% if @sub_action == 'create' %>
        <div class="row">
          <div class="col-md-12">
            <h2>Create Script</h2>
            <%= render 'value_chains/process_tracker' %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="pull-left">
              <%= link_to contributor_members_path, data: {confirm: 'Are you sure?'}, :class => 'btn btn-default' do %>
                  <i class="fa fa-chevron-left"></i> Scripts
              <% end %>
            </div>
            <div class="pull-right">
              <%= f.button :submit, class: 'btn btn-default', name: "sub_action", value: "#{@sub_action}" do %>
                  Next <i class="fa fa-chevron-right"></i>
              <% end %>
            </div>
          </div>
        </div>
    <% else %>
        <div class="row">
          <div class="col-md-12">
            <h2>Edit Script</h2>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-lg-12">
            <div class="pull-left">
              <%= link_to contributor_members_path, :class => 'btn btn-default', data: {confirm: 'Are you sure?'} do %>
                  <i class="fa fa-chevron-left"></i> Scripts
              <% end %>
              <%= f.button :submit, class: 'btn btn-default' do %>
                  <i class="fa fa-floppy-o"></i> Save
              <% end %>
              <%= link_to 'Edit Additional Information', edit_additional_information_scripts_path(:id => @script.id), :class => 'btn btn-default' %>
              <%= link_to 'Edit Value Chain', edit_build_value_chains_path(:id => @script.id), :class => 'btn btn-default' %>
            </div>
          </div>
        </div>
    <% end %>
    </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-7">
        <% if @script.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@script.errors.count, "error") %> prohibited this script from being saved:</h2>
              <ul>
                <% @script.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= f.text_field :name, :data => {:info => "Nome do Script a ser criado "}, :onclick => "set_message_info(this)" %>
        <%= f.text_field :description, :data => {:info => "Descrição do Script"}, :onclick => "set_message_info(this)" %>
        <%= f.select :platform, get_platforms, {prompt: "Please Select ..."}, :data => {:info => "Selecione a plataforma para qual o Script foi desenvolvido"}, :onclick => "set_message_info(this)" %>
        <%= f.select :industry, get_industries, {prompt: "Please Select ..."} %>
        <%= f.collection_select :solution_type_id, SolutionType.all, :id, :description, {prompt: "Please Select ..."}, :data => {:info => "Selecione o tipo de solução"}, :onclick => "set_message_info(this)" %>
        <%= f.select :complexity, get_complexities, {prompt: "Please Select ..."}, :data => {:info => "Selecione a a complexidade de acordo com a tabela de complexidades "}, :onchange => "set_message_info(this)" %>

        <% if @sub_action == 'create' %>
            <%= f.file_field :script_file, :class => 'form-control', :data => {:info => "Carrege o arquivo Script"}, :onchange => "set_message_info(this)" %>
            <%= f.file_field :pdf_file, :class => 'form-control', :data => {:info => "Carrege o arquivo PDF de especificação do Script de acordo com as inforamações de contribuioção do parceiro "}, :onchange => "set_message_info(this)" %>
        <% else %>
            <p>

            <p><strong> PFD:</strong></p> <%= File.basename(@script.script_file.to_s) %></p>

            <p>

            <p><strong> Script:</strong></p> <%= File.basename(@script.pdf_file.to_s) %></p>
        <% end %>

      </div>
      <div class="col-lg-5" id="info-message">
        <fieldset class="scheduler-border">
          <legend class="scheduler-border">Information :</legend>
          <p></p>
        </fieldset>
      </div>
    </div>
<% end %>