<%= bootstrap_form_for(@script, label_errors: true, :html => {:multipart => true}) do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'layouts/process_tracker' %>
        <!--<%= errors_for(@script) %>-->
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="pull-left">
          <%= link_to contributor_members_path, data: {confirm: 'Are you sure?'}, :class => 'btn btn-primary' do %>
              <i class="fa fa-chevron-left"></i> Scripts
          <% end %>
        </div>
        <div class="pull-right">
          <%= f.button :submit, class: 'btn btn-primary' do %>
              Next <i class="fa fa-chevron-right"></i>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Dados básicos do Script
            <small>informe os dados do script que você criou.</small>
          </h5>
        </div>
        <div class="ibox-content">
          <div class="col-lg-7">
            <%= f.text_field :name, label: "Name:", :onclick => "set_message_info('#{set_info_script_messages(:name)}')" %>
            <div class="hr-line-dashed"></div>

            <%= f.text_field :description, label: "Description:", :onclick => "set_message_info('#{set_info_script_messages(:description)}')" %>
            <div class="hr-line-dashed"></div>

            <%= f.select :platform, get_platforms, {prompt: "Please Select ..."}, {label: "Choose platform:"} %>
            <div class="hr-line-dashed"></div>

            <%= f.select :industry, get_industries, {prompt: "Please Select ..."}, {label: "Choose Industry:"} %>
            <div class="hr-line-dashed"></div>

            <%= f.collection_select :solution_type_id, SolutionType.all, :id, :description, {prompt: "Please Select ..."}, {label: "Choose Solution Type:"} %>
            <div class="hr-line-dashed"></div>

            <%= f.select :complexity, get_complexities, {prompt: "Please Select ..."}, :onchange => "set_message_info('#{set_info_script_messages(:complexity)}')" %>
            <div class="hr-line-dashed"></div>

            <%= f.text_area :definition, label: "Script definition:", :onclick => "set_message_info('#{set_info_script_messages(:definition)}')" %>
            <div class="hr-line-dashed"></div>

            <%= f.text_area :long_text, label: "Script long description:", :onclick => "set_message_info('#{set_info_script_messages(:long_text)}')" %>
            <div class="hr-line-dashed"></div>

            <!--Upload de arquivos -->
            <%= f.file_field :script_file, label: "Upload .edy file:", :onclick => "set_message_info('#{set_info_script_messages(:script_file)}')" %>
            <div class="hr-line-dashed"></div>

            <%= f.hidden_field :script_file_cache %>
            <div id="upload_script">
              <%= render partial: 'scripts/upload_scrip', script: @script %>
            </div>
            <div class="hr-line-dashed"></div>

            <%= f.file_field :pdf_file, label: "Upload .pdf paper:", :onclick => "set_message_info('#{set_info_script_messages(:pdf_file)}')" %>
            <div class="hr-line-dashed"></div>

            <%= f.hidden_field :pdf_file_cache %>
            <div id="upload_pdf">
              <%= render partial: 'scripts/upload_pdf', script: @script %>
            </div>
          </div>
          <div class="col-lg-5" id="info-message">
            <fieldset class="scheduler-border">
              <legend class="scheduler-border">Information :</legend>
              <p></p>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
<% end %>