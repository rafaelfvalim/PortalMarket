<%= bootstrap_form_for (@script) do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'process_tracker' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="pull-left">
          <%= link_to contributor_members_path, data: {confirm: 'Are you sure?'}, :class => 'btn btn-default' do %>
              <i class="fa fa-chevron-left"></i> Scripts
          <% end %>
        </div>
        <div class="pull-right">
          <%= link_to next_wizard_path(script_id: @script.id), :class => 'btn btn-default' do %>
              Next <i class="fa fa-chevron-right"></i>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-7">
        <%= f.text_field :name, :onclick => "set_message_info('#{set_info_script_messages(:name)}')" %>
        <%= f.text_field :description, :onclick => "set_message_info('#{set_info_script_messages(:description)}')" %>
        <%= f.select :platform, get_platforms, {prompt: "Please Select ..."}, :onclick => "set_message_info('#{set_info_script_messages(:platform)}')" %>
        <%= f.select :industry, get_industries, {prompt: "Please Select ..."}, :onclick => "set_message_info('#{set_info_script_messages(:industry)}')" %>
        <%= f.collection_select :solution_type_id, SolutionType.all, :id, :description, {prompt: "Please Select ..."}, :onclick => "set_message_info('#{set_info_script_messages(:solution_type_id)}')" %>
        <%= f.select :complexity, get_complexities, {prompt: "Please Select ..."}, :onchange => "set_message_info('#{set_info_script_messages(:complexity)}')" %>
        <%= f.text_area :definition, :onclick => "set_message_info('#{set_info_script_messages(:definition)}')" %>
        <%= f.text_area :long_text, :onclick => "set_message_info('#{set_info_script_messages(:long_text)}')" %>
        <%= f.file_field :script_file, :class => 'form-control', :data => {:info => "Carrege o arquivo Script"}, :onchange => "set_message_info('#{set_info_script_messages(:name)}')" %>
        <%= f.file_field :pdf_file, :class => 'form-control', :onchange => "set_message_info('#{set_info_script_messages(:name)}')" %>
      </div>
      <div class="col-lg-5" id="info-message">
        <fieldset class="scheduler-border">
          <legend class="scheduler-border">Information :</legend>
          <p></p>
        </fieldset>
      </div>
    </div>
<% end %>