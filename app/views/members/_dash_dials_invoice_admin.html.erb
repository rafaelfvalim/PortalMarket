<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Invoices Workflow </strong>
  </div>
  <div class="panel-body">
    <% InvoiceStatus.all.each do |invoice_status| %>
        <div class="col-lg-3 col-md-6">
          <div class="panel panel-<%= dash_admin_panel_color(invoice_status.id) %>">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="<%= dash_admin_icon(invoice_status.id) %>"></i>
                </div>
                <div class="col-xs-9 text-right">
                  <div class="huge"><%= Invoice.where('invoice_status_id = ?', invoice_status.id).count %></div>
                  <br>
                  <div> <%= "Com Status: #{invoice_status.description}" %></div>
                </div>
              </div>
            </div>
            <%= link_to invoice_orchestration_invoices_path(invoice_status_id: invoice_status.id) do %>
                <div class="panel-footer">
                  <span class="pull-left">View Details</span>
                  <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                  <div class="clearfix"></div>
                </div>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>


