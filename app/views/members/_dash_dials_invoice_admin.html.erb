<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-title">
        <h5>Invoices Workflow
          <small>Control statuses of invoices</small>
        </h5>
      </div>
      <div class="ibox-content">
        <div class="row">
          <% InvoiceStatus.all.each do |invoice_status| %>
              <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="widget style1 <%= dash_admin_panel_color(invoice_status.id) %>">
                  <div class="row">
                    <div class="col-xs-4">
                      <i class="<%= dash_admin_icon(invoice_status.id) %>"></i>
                    </div>
                    <div class="col-xs-8">
                      <h4><%= "#{invoice_status.description}(s)" %></h4>
                      <h2 class="font-bold"><%= Invoice.where('invoice_status_id = ?', invoice_status.id).count %></h2>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-xs-12 dash_links">
                      <%= link_to invoice_orchestration_invoices_path(invoice_status_id: invoice_status.id) do %>
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
          <div class="col-md-3 col-sm-4 col-xs-6">
            <div class="widget style1 lazur-bg">
              <div class="row">
                <div class="col-xs-4">
                  <i class="fa fa-database fa-5x"></i>
                </div>
                <div class="col-xs-8">
                  <h4>Invoices </h4>
                  <h2 class="font-bold"></h2>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-xs-12 dash_links">
                  <%= link_to invoices_path do %>
                      <span class="pull-left">View Details</span>
                      <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                      <div class="clearfix"></div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
