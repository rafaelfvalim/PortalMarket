<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Basic IN+ Panel <small class="m-l-sm">This is custom panel</small></h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>

      </div>
    </div>
    <div class="ibox-content">
        <div class="list-group">
          </a>
          <a href="#" class="list-group-item">
            <i class="fa fa-money fa-fw"></i> Invoice(s) Shipped Today
                                    <span class="pull-right text-muted small"><em><%= Invoice.where('shipped_to is not null and DATE(ship_date) = ? ', Date.today).count %></em>
                                    </span>

          </a>
          <a href="#" class="list-group-item">
            <i class="fa fa-money fa-fw"></i> Invoice(s) Shipped This Week
                                    <span class="pull-right text-muted small"><em><%= Invoice.where('shipped_to is not null and DATE(ship_date) > ? and DATE(ship_date) <= ? ', Date.today.beginning_of_week, Date.today.end_of_week).count %> </em>
                                    </span>
          </a>
          <a href="#" class="list-group-item">
            <i class="fa fa-money fa-fw"></i> Invoice(s) Shipped This Month
                                    <span class="pull-right text-muted small"><em><%= Invoice.where('shipped_to is not null and DATE(ship_date) > ? and DATE(ship_date) <= ? ', Date.today.beginning_of_month, Date.today.end_of_month).count %> </em>
                                    </span>
          </a>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            Invoices Payment
          </div>
          <div class="panel-body">
            <%= line_chart Invoice.group_by_day(:pay_date).count %>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            Invoices Created
          </div>
          <div class="panel-body">
            <%= line_chart Invoice.group_by_day(:created_at).count %>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            Invoices Shiped
          </div>
          <div class="panel-body">
            <% InvoiceStatus.all do |status| %>
                <%= status.description %>
            <% end %>
            <%= line_chart Invoice.group_by_day(:ship_date).count %>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            Invoices Status
          </div>
          <div class="panel-body">
            <%= pie_chart Invoice.group(:invoice_status_id).count %>
          </div>
        </div>
    </div>
    <div class="ibox-footer">
                        <span class="pull-right">
                          The righ side of the footer
                    </span>
      This is simple footer example
    </div>
  </div>
</div>


