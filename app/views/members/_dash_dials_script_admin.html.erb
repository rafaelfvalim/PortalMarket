<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Scripts Workflow </strong>
  </div>
  <div class="panel-body">
    <% Status.all.each do |status| %>
        <% if status.id != 6 %>
            <div class="col-lg-3 col-md-6">
              <div class="panel panel-<%= dash_admin_panel_color(status.id) %>">
                <div class="panel-heading">
                  <div class="row">
                    <div class="col-xs-3">
                      <i class="<%= dash_admin_icon(status.id) %>"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                      <div class="huge"><%= @status_count = Script.where('status_id = ?', status.id).count %></div>
                      <br>
                      <div> <%= "Com Status: #{status.description}" %> </div>
                    </div>
                  </div>
                </div>
                <%= link_to script_orchestration_scripts_path(status_id: status.id) do %>
                    <div class="panel-footer">
                      <span class="pull-left">View Details</span>
                      <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                      <div class="clearfix"></div>
                    </div>
                <% end %>
              </div>
            </div>
        <% end %>
    <% end %>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-red">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-usd fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%= Script.where('has_price is null').count %></div>
              <br>

              <div> Whithout Price</div>
            </div>
          </div>
        </div>
        <%= link_to script_prices_prices_path do %>
            <div class="panel-footer">
              <span class="pull-left">View Details</span>
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

              <div class="clearfix"></div>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-red">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-exclamation fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%= Script.where('status_id = 6 and DATE(created_at) < ?', Date.today).count %></div>
              <br>

              <div>Not Complete <br> <small>Not searchable!!</small></div>
            </div>
          </div>
        </div>
        <%= link_to script_orchestration_scripts_path(status_id: 6) do %>
            <div class="panel-footer">
              <span class="pull-left">View Details</span>
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

              <div class="clearfix"></div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
