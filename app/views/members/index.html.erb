<div class="container-fluid">
  <div class="panel panel-default center">
    <div class="panel-body">
      <div id="page-wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">Members Dashboard</h1>
          </div>
        </div>
        <div class="row">
          <% if @member.contributor %>
              <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary">
                  <div class="panel-heading">
                    <div class="row">
                      <div class="col-xs-3">
                        <i class="fa fa-comments fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                        <%= image_tag("user.png") %>
                        <div class="huge">26</div>
                        <div>New Notifications!</div>
                      </div>
                    </div>
                  </div>
                  <%= link_to controller: "members", action: "contributor", id: @member.id do %>
                      <div class="panel-footer">
                        <span class="pull-left">Contribuitors Dashboard</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                  <% end %>
                </div>
              </div>
          <% end %>
          <% if @member.customer %>
              <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary">
                  <div class="panel-heading">
                    <div class="row">
                      <div class="col-xs-3">
                        <i class="fa fa-comments fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                        <%= image_tag("user.png") %>
                        <div class="huge">26</div>
                        <div>New Notifications!</div>
                      </div>
                    </div>
                  </div>
                  <%= link_to controller: "members", action: "customer", id: @member.id do %>
                      <div class="panel-footer">
                        <span class="pull-left">Costumer Dashboard</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                  <% end %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
