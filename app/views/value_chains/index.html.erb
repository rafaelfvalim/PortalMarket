<p id="notice"><%= notice %></p>

<h1>Listing Value Chains</h1>

<table>
  <thead>
    <tr>
      <th>Process module</th>
      <th>Script</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @value_chains.each do |value_chain| %>
      <tr>
        <td><%= value_chain.process_module %></td>
        <td><%= value_chain.script %></td>
        <td><%= link_to 'Show', value_chain %></td>
        <td><%= link_to 'Edit', edit_value_chain_path(value_chain) %></td>
        <td><%= link_to 'Destroy', value_chain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

