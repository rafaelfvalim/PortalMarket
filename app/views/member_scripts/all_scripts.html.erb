<%= render 'layouts/messages' %>
<div class="row wrapper page-heading">
  <div class="col-lg-10">
    <h2>Scripts</h2>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Total:</dt>
      <dd><%= Script.all.count %>
      </dd>
    </dl>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default center">
      <div class="panel-body">
        <table class="table table-striped table-condensed display responsive no-wrap" id="member-script-table" data-source="<%= all_scripts_member_scripts_path(format: :json) %>" width="100%">
          <thead>
          <tr>
            <th><%= t 'labels.script_attributes.code' %></th>
            <th><%= t 'labels.script_attributes.name' %></th>
            <th><%= t 'labels.script_attributes.description' %></th>
            <th><%= t 'labels.script_attributes.platform' %></th>
            <th><%= t 'labels.script_attributes.status' %></th>
            <th><%= t 'labels.script_attributes.price' %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
