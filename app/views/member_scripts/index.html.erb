<%= render 'layouts/messages' %>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t 'labels.menu.my_scripts' %></h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
  <div class="ibox-content m-b-sm border-bottom">
    <div class="row">
      <div class="col-sm-12">
        <div class="pull-right">
            <dl class="dl-horizontal">
              <dt>Total:</dt>
              <dd><%= Script.joins(:member_scripts).where('member_scripts.member_id = ?', current_user.member.id).count %>
              </dd>
            </dl>
        </div>
        <div class="pull-left">
          <%= link_to new_script_path, :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= t 'labels.buttons.new' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default center">
        <div class="panel-body">
          <table class="table table-striped table-condensed responsive" id="member-script-table" data-source="<%= member_scripts_path(format: :json) %>" width="100%">
            <thead>
            <tr>
              <th><%= t 'labels.script_attributes.code' %></th>
              <th><%= t 'labels.script_attributes.name' %></th>
              <th><%= t 'labels.script_attributes.description' %></th>
              <th><%= t 'labels.script_attributes.platform' %></th>
              <th><%= t 'labels.script_attributes.status' %></th>
              <th><%= t 'labels.script_attributes.price' %></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
