<%= render 'layouts/messages' %>
<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
    <div class="page-header text-center">
      <h4> Compra realizada com sucesso !</h4>
      <h4> Os links para download foram enviados para seu email </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h5><b>Total: <%= get_total(@carts) %></b></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <table class="table table-striped">
        <thead>
        <tr>
          <td>Script:</td>
          <td>Price:</td>
        </tr>
        </thead>
        <tbody>
        <% @carts.each do |cart| %>
            <tr>
              <td><%= cart.script.name %></td>
              <td><%= cart.price.value %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>