<h1>Messages</h1>

<div id="users">
  <ol>
  <% @members.each do |member| %>
      <li><%= link_to  full_name member %></li>
  <% end %>
    </ol>
</div>

<div id="messages">
  <ol>
    <% @messages.each do |message| %>
        <li><%= message.content %></li>
    <% end %>
  </ol>
</div>

<%= form_for @message, remote: true do |f| %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.hidden_field :message_to, :value => current_user.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Send" %>
<% end %>