<%= form_tag controller: :invoices, action: :create do %>
    <div class="row-fluid">
      <div class="col-md-10">
        <%= link_to searches_path, class: 'btn btn-default' do %>
            <i class="fa fa-chevron-left"> Back</i>
        <% end %>
        <% if carts.size > 0  %>
            <%= button_tag(type: "submit", class: "btn btn-default", id: "submit_invoice") do %>
                Finalize
            <% end %>
        <% end %>
      </div>
      <div class="col-md-2">
        <h5><b>Total: <%= get_total(carts) %></b></h5>
      </div>
      <br>

      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Member</th>
              <th>Script</th>
              <th>Price</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% carts.each do |cart| %>
                <tr>
                  <td><%= "#{cart.member.member_name} #{cart.member.member_last_name}" %></td>
                  <td><%= cart.script.name %></td>
                  <td><%= cart.price.value %></td>
                  <td><%= link_to 'Remove', cart, method: :delete, data: {confirm: 'Are you sure?'},remote: true, class: 'btn btn-default' %></td>
                  <%= hidden_field_tag 'cart[]', cart.id %>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
<% end %>