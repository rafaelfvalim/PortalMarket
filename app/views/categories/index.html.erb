<%= render 'layouts/messages' %>
<div class="row wrapper page-heading">
  <div class="col-lg-10">
    <h2><%= t 'labels.category.page_header' %></h2>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
    <div class="col-md-12 col-lg-12 col-xs-12">
      <%= link_to :back, class: 'btn btn-primary next' do %>
          <i class="fa fa-chevron-left"> <%= t 'labels.buttons.back'%></i>
      <% end %>
      <%= link_to new_category_path, class: 'btn btn-info' do %>
          <i class="fa fa-plus-square-o"> <%= t 'labels.buttons.new'%></i>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default center">
        <div class="panel-body">
          <table class="table table-striped table-condensed display responsive no-wrap" id="category-table" data-source="<%= get_data_ajax_categories_path(format: :json) %>">
            <thead>
            <tr>
              <th>Id</th>
              <th><%= t 'labels.category_attributes.description'%></th>
              <th><%= t 'labels.category_attributes.search_param'%></th>
              <th>Imagem padr√£o</th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
